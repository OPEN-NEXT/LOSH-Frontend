{
  "name": "losh-frontend",
  "private": true,
  "description": "Library of Open Source Hardware frontend package",
  "version": "0.1.0",
  "author": "Adam Hammad <mail@adamham.dev>",
  "dependencies": {
    "antd": "^4.16.7",
    "eslint-loader": "^3.0.4",
    "gatsby": "^2.20.24",
    "gatsby-image": "^2.2.39",
    "gatsby-plugin-antd": "^2.2.0",
    "gatsby-plugin-less": "^5.9.0",
    "gatsby-plugin-manifest": "^2.2.39",
    "gatsby-plugin-offline": "^3.0.32",
    "gatsby-plugin-react-helmet": "^3.1.21",
    "gatsby-plugin-sharp": "^2.4.3",
    "gatsby-plugin-typescript": "^2.1.26",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-source-filesystem": "^2.1.46",
    "gatsby-transformer-sharp": "^2.3.13",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-jest": "^25.3.0",
    "babel-preset-gatsby": "^0.3.1",
    "cross-env": "^7.0.3",
    "cypress": "^7.7.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "gatsby-plugin-eslint": "^2.0.8",
    "gatsby-plugin-ts-checker": "^1.1.0",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.3.0",
    "lint-staged": "^11.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^3.1.1",
    "react-test-renderer": "^16.13.1",
    "start-server-and-test": "^1.12.6",
    "typescript": "^3.7.5"
  },
  "keywords": [
    "losh",
    "open source",
    "hardware",
    "gatsby",
    "typescript",
    "eslint",
    "jest",
    "prettier"
  ],
  "license": "GPLv3",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "develop": "gatsby develop",
    "precommit": "lint-staged",
    "format": "prettier --check \"**/*.{css,js,jsx,json,md,ts,tsx,yml}\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --write \"**/*.{css,js,jsx,json,md,ts,tsx,yml}\"",
    "start": "yarn develop",
    "serve": "gatsby serve",
    "test": "jest",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test develop http://localhost:8000 cy:open",
    "test:e2e:ci": "start-server-and-test develop http://localhost:8000 cy:run"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "{*.{json,md}}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wmde/LOSH-Frontend"
  }
}
